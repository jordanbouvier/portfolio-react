@import 'app/styles/charte'

.realisation

  position: relative
  margin-top: .3rem
  width: 100%
  @media screen and (min-width: $medium)
    width: 50%
  @media screen and (min-width: $large)
    width: 33%

  &-thumbnail
    max-width: 100%
    max-height: 100%
    width: 100%
    height: 100%
  &-title
    font-family: $main-font
    position absolute
    width: 100%
    height: 100%
    background-color: rgba(main-color, 0.6)
    text-align center
    font-size: 1.5rem
    padding: 1rem
    border: 1px solid white
    visibility: hidden
    &-content
      color: white
      position: absolute;
      width: 100%
      left: 0
      top: 50%
      transform: translateY(-50%)
      font-variant: small-caps

  &:hover
    cursor:pointer

  &:hover &-title
    visibility: visible
