@require 'app/styles/charte'

.nav
  z-index: 2
  position: relative
  justify-content space-between
  height: 80px
  flex-wrap: wrap
  flex-direction: row

  &-controls
    padding: 1rem
    display: flex
    justify-content: space-between
    width: 100%
    background-color: main-color
    z-index: 2
    margin: auto 0
    position: relative
    & .main-logo
      width: 40px
      height: 40px

  & .main-logo, &-toggle-button
    margin: auto 0

  &-toggle-button
    width: 30px
    height: 30px
    & svg
      width: 100%
      height: 100%
      fill: white

  &-items
    text-align: center
    margin: auto 0
    position: relative
    top: -1000px
    width: 100%
    background-color: main-color

  @media screen and (min-width: $medium)
    background-color: main-color
    display flex
    flex-direction: column
    height: 80px
    justify-content: space-between
    &-controls
      width: 10%
    &-toggle-button
      display: none
    &-items
      display flex
      top: 0
      width: 90%
      justify-content: flex-end
      padding-right: 1rem

  @media screen and (max-width: $medium)
    &-items
      -webkit-transition: top .5s
      transition: top .5s
    &--open &-items
      display: block
      top: 0